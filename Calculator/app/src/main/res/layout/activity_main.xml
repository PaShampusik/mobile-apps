<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"  android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <Switch
            android:id="@+id/themeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textOff="Light"
            android:textOn="Dark" />
    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="50sp"
        android:ellipsize="start"
        android:text=""
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="30sp"
        android:ellipsize="start"
        android:text=""
        android:singleLine="true"
        />
        </LinearLayout>



    <LinearLayout
        android:id="@+id/operations_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style = "@style/Operations_Sci"
                android:text="sqrt"
                android:id="@+id/b_sqrt">
            </TextView>

            <TextView
                style = "@style/Operations_Sci"
                android:text="log2"
                android:id="@+id/b_log2">
            </TextView>

            <TextView
                style = "@style/Operations_Sci"
                android:text="ln"
                android:id="@+id/b_ln">
            </TextView>

            <TextView
                style = "@style/Operations_Sci"
                android:text="("
                android:id="@+id/b_leftb">
            </TextView>

            <TextView
                style = "@style/Operations_Sci"
                android:text=")"
                android:id="@+id/b_rightb">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style = "@style/Operations_Sci"
                android:text="x^y"
                android:id="@+id/b_degree">
            </TextView>

            <TextView
                style = "@style/Operations"
                android:text="AC"
                android:id="@+id/b_AC">
            </TextView>

            <TextView
                android:id="@+id/b_back"
                style="@style/Operations"
                android:text="back"></TextView>

            <TextView
                style = "@style/Operations"
                android:text="%"
                android:id="@+id/b_percent">
            </TextView>

            <TextView
                style = "@style/Operations"
                android:text="/"
                android:id="@+id/b_divide">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_sin"
                style="@style/Operations_Sci"
                android:text="sin"></TextView>

            <TextView
                android:id="@+id/b_seven"
                style="@style/Numbers"
                android:text="7"></TextView>

            <TextView
                android:id="@+id/b_eight"
                style="@style/Numbers"
                android:text="8"></TextView>

            <TextView
                android:id="@+id/b_nine"
                style="@style/Numbers"
                android:text="9"></TextView>

            <TextView
                android:id="@+id/b_multy"
                style="@style/Operations"
                android:text="*"></TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style = "@style/Operations_Sci"
                android:text="cos"
                android:id="@+id/b_cos">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="4"
                android:id="@+id/b_four">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="5"
                android:id="@+id/b_fife">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="6"
                android:id="@+id/b_six">
            </TextView>

            <TextView
                style = "@style/Operations"
                android:text="-"
                android:id="@+id/b_minus">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style = "@style/Operations_Sci"
                android:text="pi"
                android:id="@+id/b_pi">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="1"
                android:id="@+id/b_one">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="2"
                android:id="@+id/b_two">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="3"
                android:id="@+id/b_three">
            </TextView>

            <TextView
                style = "@style/Operations"
                android:text="+"
                android:id="@+id/b_plus">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style = "@style/Operations_Sci"
                android:text="e"
                android:id="@+id/b_epsilon">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="000"
                android:id="@+id/b_zeros">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="."
                android:id="@+id/b_point">
            </TextView>

            <TextView
                style = "@style/Numbers"
                android:text="0"
                android:id="@+id/b_zero">
            </TextView>

            <TextView
                android:background="@color/color_equal"
                android:textColor="@color/white"
                style = "@style/Operations"
                android:text="="
                android:id="@+id/b_equal">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>